<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page2">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="348dp"
        android:layout_height="268dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quesiton2__1_" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="328dp"
        android:layout_height="74dp"
        android:onClick="nextPage"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btnFail1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/page2_t" />

    <ImageButton
        android:id="@+id/btnFail1"
        android:layout_width="334dp"
        android:layout_height="87dp"
        android:onClick="failPage"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btnFail2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNext"
        app:srcCompat="@drawable/page2_f" />

    <ImageButton
        android:id="@+id/btnFail2"
        android:layout_width="346dp"
        android:layout_height="66dp"
        android:onClick="failPage"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFail1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/page2_ff" />

</androidx.constraintlayout.widget.ConstraintLayout>